                android:clickable="true"
                android:onClick="onClick"
                android:paddingBottom="@dimen/keyboard_button_padding_vertical"
                android:paddingLeft="@dimen/keyboard_button_padding_horizontal"
                android:paddingRight="36dp"
                android:paddingTop="@dimen/keyboard_button_padding_vertical">

