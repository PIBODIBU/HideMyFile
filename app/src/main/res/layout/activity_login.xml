            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

        <ImageView
            android:id="@+id/pwd_indicator_4"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_margin="8dp" />
    </LinearLayout>

