                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="0dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/keyboard_text_size" />
            </LinearLayout>

